---
import BaseLayout from "../../layouts/BaseLayout.astro";
export async function getStaticPaths({ paginate }) {
    const allPosts = await Astro.glob('../book/*.md');

    const sortedPosts = allPosts.sort(
        (a, b) => new Date(b.date) - new Date(a.date)
    );

    return paginate(sortedPosts, { pageSize: 5 });
}

export interface Props {
    bgImage?: string;
}
const { bgImage = "url(../uploads/bg-cartographer_darker.jpg)" } = Astro.props as Props;

const { content } = Astro.props;
const { title, description, publishDate, author, heroImage, permalink, alt } =
    content;

---  

<BaseLayout content={{ title, description, bgImage }}>
    <div class="min-h-screen buddy">
        <article class="p-4 lg:p-24 w-3/4 mx-auto text-white">
            <h1 class="font-brand leading-tight text-yellow-700 text-center text-7xl"
                style="text-shadow:2px 1px 1px #000;">
                {title}</h1>
            <p class="font-2xl">{description}</p>
            <div class="prose lg:prose-lg prose-invert mx-auto mt-8">
                <slot />
            </div>
        </article>
    </div>
</BaseLayout>