---
import BaseHead from "../components/BaseHead.astro";
import Sidebar from "../components/Sidebar.astro";
import Footer from "../components/Footer.astro";
//import site from "../data/site";
const { content } = Astro.props;
const { title, description, publishDate, author, permalink, alt } =
  content;
const bgImage = "../uploads/bg-clock_op34n13.jpg"

---
<style define:vars={{ bgImage }}>
  #wrapper {
    background-image: url(var(--bgImage));
  }
</style>  
<!DOCTYPE html>
<html lang={content.lang || "en"}>
  <head>
    <BaseHead {title} {description} {permalink} />
  </head>
  <body>
    <div id="wrapper" class="md:pr-64 h-full min-h-full flex flex-col justify-between bg-cover bg-fixed bg-no-repeat">
      <div id="content" class="min-h-screen text-white" >                    
        <slot />
      </div>
      <Sidebar />
      <Footer />       
    </div>      
  </body>
</html> 
